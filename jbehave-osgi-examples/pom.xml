<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jbehave.osgi</groupId>
		<artifactId>jbehave-osgi</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>org.jbehave.osgi.examples</groupId>
	<artifactId>jbehave-osgi-examples</artifactId>
	<packaging>pom</packaging>
	<name>JBehave OSGi Examples</name>
	<description>JBehave OSGi Examples provides samples of OSGi integration with JBehave Core functionality.</description>

	<properties>
		<eclipse-site>http://download.eclipse.org/releases/kepler</eclipse-site>
		<ui.test.vmargs>-Xmx512m -XX:MaxPermSize=256m</ui.test.vmargs>
		<swtbot-site>http://download.eclipse.org/technology/swtbot/snapshots</swtbot-site>
	</properties>

	<repositories>
		<repository>
			<id>eclipse-platform</id>
			<layout>p2</layout>
			<url>${eclipse-site}</url>
		</repository>
		<repository>
			<id>swtbot</id>
			<layout>p2</layout>
			<url>${swtbot-site}</url>
		</repository>
		<repository>
			<id>jbehave-osgi-p2</id>
			<layout>p2</layout>
			<url>${jbehave-osgi-p2-repo}</url>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>local_repo</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<jbehave-osgi-p2-repo>file:///${basedir}/../../../jbehave-osgi-equinox/org.jbehave.osgi.equinox.p2/target/repository</jbehave-osgi-p2-repo>
			</properties>
		</profile>
	</profiles>
</project>
