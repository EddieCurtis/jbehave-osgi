<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jbehave.osgi</groupId>
	<artifactId>jbehave-osgi</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>JBehave OSGi</name>
	<description>JBehave OSGi provides a OSGi integration layer for JBehave Core functionality.</description>

	<prerequisites>
		<maven>3.0.0</maven>
	</prerequisites>

	<properties>

		<!-- This is the version of the next release to be generated. It is used 
			by tycho-version-plugin -->
		<next-release>1.0.0</next-release>

		<jbehave.core.version>4.0-SNAPSHOT</jbehave.core.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jbehave.web.version>3.5.5</jbehave.web.version>
		<selenium.version>2.32.0</selenium.version>
		<maven.build.timestamp.format>yyyyMMddHHmm</maven.build.timestamp.format>
		<maven-bundle-plugin.version>2.3.7</maven-bundle-plugin.version>
		<osgi-version-qualifier>${maven.build.timestamp}</osgi-version-qualifier>
		<tycho-version>0.17.0</tycho-version>
		<tychoExtrasVersion>0.17.0</tychoExtrasVersion>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-core</artifactId>
				<version>${jbehave.core.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jbehave</groupId>
				<artifactId>jbehave-web</artifactId>
				<version>${jbehave.web.version}</version>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.11</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>1.7.3</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.osgi</groupId>
				<artifactId>org.osgi.core</artifactId>
				<version>4.3.1</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.osgi</groupId>
				<artifactId>org.osgi.compendium</artifactId>
				<version>4.3.1</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>org.codehaus.plexus</groupId>
				<artifactId>plexus-utils</artifactId>
				<version>3.0.10</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.paranamer</artifactId>
				<version>2.5.2_1</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.xstream</artifactId>
				<version>1.4.4_2</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.xpp3</artifactId>
				<version>1.1.4c_6</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.specs</groupId>
				<artifactId>org.apache.servicemix.specs.jaxp-api-1.4</artifactId>
				<version>2.2.0</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.xmlpull</artifactId>
				<version>1.1.3.1_2</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.freemarker</artifactId>
				<version>2.3.19_1</version>
			</dependency>
			<dependency>
				<groupId>org.apache.servicemix.bundles</groupId>
				<artifactId>org.apache.servicemix.bundles.hamcrest</artifactId>
				<version>1.3_1</version>
			</dependency>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>14.0</version>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.web</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.interactive</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.core</artifactId>
				<version>${project.version}</version>
				<classifier>sources</classifier>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.web</artifactId>
				<version>${project.version}</version>
				<classifier>sources</classifier>
			</dependency>
			<dependency>
				<groupId>org.jbehave.osgi</groupId>
				<artifactId>org.jbehave.osgi.interactive</artifactId>
				<version>${project.version}</version>
				<classifier>sources</classifier>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<version>2.3.7</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.1</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
		<profile>
			<id>bundles</id>
			<!-- NOTE: we can't build the bundles (bnd) in same maven reactor than 
				equinox (tycho) -->
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-bundles</module>
			</modules>
		</profile>
		<profile>
			<id>equinox</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-equinox</module>
			</modules>
		</profile>
		<profile>
			<id>prepare-for-next-release</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<defaultGoal>org.eclipse.tycho:tycho-versions-plugin:set-version</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-versions-plugin</artifactId>
						<version>${tycho-version}</version>
						<executions>
							<execution>
								<id>change-next-release</id>
								<goals>
									<goal>set-version</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<newVersion>${next-release}</newVersion>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<modules>
				<module>jbehave-osgi-bundles</module>
				<module>jbehave-osgi-equinox</module>
				<module>jbehave-osgi-examples</module>
			</modules>
		</profile>
	</profiles>

	<organization>
		<name>JBehave.org</name>
		<url>www.jbehave.org</url>
	</organization>
	<developers>
		<developer>
			<id>Cristiano Gavião</id>
			<name>Cristiano Gavião</name>
		</developer>
	</developers>

	<scm>
		<connection>scm:git:git://git.codehaus.org/jbehave-osgi.git</connection>
		<developerConnection>scm:git:ssh://git@git.codehaus.org/jbehave-osgi.git</developerConnection>
		<url>http://git.codehaus.org/gitweb.cgi?p=jbehave-osgi.git</url>
	</scm>
</project>
