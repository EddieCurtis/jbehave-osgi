			</modules>
		</profile>

		<!-- An console application that uses Maven and Pax-Exam (Felix) to run 
			the integration tests -->
		<profile>
			<id>example-trader-paxexam-felix</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
			</properties>
			<build>
				<defaultGoal>verify</defaultGoal>
			</build>
			<modules>
				<module>jbehave-osgi-examples/examples-pom-first/trader-pomfirst-paxexam</module>
			</modules>
		</profile>

