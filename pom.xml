	<profiles>
		<!-- NOTE: we can't build pom-first bundles (bnd/maven-bundle-plugin) in 
			same maven reactor than equinox (tycho) -->
		<profile>
			<id>bundles</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-bundles</module>
				<module>jbehave-osgi-bundles/org.jbehave.osgi.core</module>
				<module>jbehave-osgi-bundles/org.jbehave.osgi.web</module>
				<module>jbehave-osgi-bundles/org.jbehave.osgi.paxexam</module>
				<module>jbehave-osgi-bundles/org.jbehave.osgi.logging</module>
				<module>jbehave-osgi-equinox</module>
			</modules>
		</profile>
		<profile>
			<!-- This profile requires setting property pax.exam.framework. eg: -Dpax.exam.framework=equinox_kepler 
				or =felix -->
			<id>itests</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-bundles/org.jbehave.osgi.core.itests</module>
			</modules>
		</profile>
		<profile>
			<!-- This profile can't run together with bundle or itest profiles, only 
				with another Tycho based profile. -->
			<!-- In order to automatically copy the generated p2 to a distribution 
				folder you must set the property jbehave.osgi.distr.p2.location. eg: -Djbehave.osgi.distr.p2.location=/www/jbehave/p2 -->
			<id>distribution-equinox</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<modules>
				<module>jbehave-osgi-equinox</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.fragment.jdk</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.commands</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.commands.test</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.swtbot</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.features.core</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.features.web</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.features.swtbot</module>
				<module>jbehave-osgi-equinox/org.jbehave.osgi.equinox.p2</module>
			</modules>
		</profile>

		<profile>
			<!-- An RCP application that uses SwtBot and Tycho based building -->
			<id>example-rcpmail</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<defaultGoal>verify</defaultGoal>
			</build>
			<modules>
				<module>jbehave-osgi-examples/examples-manifest-first</module>
				<module>jbehave-osgi-examples/examples-manifest-first/rcpmail-tycho-swtbot</module>
			</modules>
		</profile>

		<profile>
			<!-- An console application that uses Tycho based building -->
			<id>example-trader-tycho-equinox</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
