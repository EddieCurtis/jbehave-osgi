<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:sh="http://karaf.apache.org/xmlns/shell/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<cm:property-placeholder persistent-id="org.jbehave.osgi"
		update-strategy="reload">
		<cm:default-properties>
			<cm:property name="includes" value="" />
		</cm:default-properties>
	</cm:property-placeholder>


	<reference id="embedderService" interface="org.jbehave.osgi.services.EmbedderService" />

	<sh:command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<command name="jbehave/status">
			<action class="org.jbehave.osgi.commands.StatusCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
		</command>
		<command name="jbehave/run-stories-with-annotated-embedder">
			<action class="org.jbehave.osgi.commands.RunStoriesWithAnnotatedEmbedderCommand">
				<property name="embedderService" ref="embedderService" />
			</action>
			<completers xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
				<ref component-id="completer" />
				<null />
			</completers>
		</command>
	</sh:command-bundle>

	<bean id="completer" class="org.jbehave.osgi.commands.ClassNamesCompleter">
		<property name="includes" value="${includes}" />
	</bean>

</blueprint>